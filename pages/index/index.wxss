/**index.wxss**/
Page,
.all {
    height: 100%;
    width: 100%;
    overflow: hidden;
    position: relative;
}
.bg {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    overflow: hidden;
}
.bg > image {
    width: 100%;
    height: 100%;
}
.baseIm {
    position: relative;
    top: 0;
    left: 0;
    width: 100%;
    height: 27%;
}
.home {
    margin-left: 10px;
    width: 100%;
    height: 36px;
    line-height: 36px;
    font-size: 16px;
    vertical-align: bottom;
    color: rgb(255, 255, 255);
}
.userName {
    position: absolute;
    left: 40px;
    top: 15px;
}
.add {
    position: absolute;
    right: 10px;
    top: 10px;
}
.tcolor {
    color: #fff;
    font-size: 16px;
}
.temptxt {
    margin-left: 10px;
    font-size: 56px;
}
.addresstxt {
    position: absolute;
    top: 55px;
    left: 160px;
}
.weathertxt {
    position: absolute;
    top: 80px;
    left: 160px;
}
.weathertxt-Desc {
    height: 30px;
    width: 30px;
    position: absolute;
    top: -4px;
    left: 70px;
}
.imfo {
    margin-left: 10px;
}
.imfo > text {
    font-size: 14px;
    color: #fff;
    margin-right: 50px;
}
.equipment {
    position: absolute;
    width: 100%;
    height: 73%;
}
.bar-equipment {
    float: left;
    margin-left: 4px;
    border-radius: 5px;
    width: 20%;
    height: 95%;
    background-color: #fff;
}
.line {
    width: 60%;
    border: 1px solid #999;
    margin: 10px 20%;
}
.bar-box {
    margin: 0 25%;
    width: 50%;
    height: 80%;
    overflow: hidden;
}
.icon-bar {
    margin: 5px 0;
    width: 150%;
    height: 100%;
    overflow: auto;
}
.icons {
    margin-bottom: 10px;
    margin-left: 2px;
}
.box-equipment {
    margin-left: 5px;
    float: left;
    border-radius: 5px;
    width: 76%;
    height: 95%;
    background: rgba(0, 0, 0, 0.2);
}
.add-box {
    margin-top: 6px;
    margin-left: 3%;
    width: 45%;
    height: 70px;
    text-align: center;
    background-color: #fff;
    border-radius: 5px;
    float: left;
    font-size: 14px;
    line-height: 70px;
    overflow: hidden;
}

.add-box > image {
    float: left;
    width: 50%;
    height: 90%;
}
.add-box > text {
    float: left;
    width: 50%;
    height: 90%;
    line-height: 20px;
}
.open,
.close {
    position: relative;
    width: 20px;
    height: 3px;
    top: 62px;
    left: 20px;
    background-color: green;
}
.close {
    background-color: #ccc;
}
/* 全局 */
.icon {
    width: 50%;
    margin: 10px 25% 5px;
}
.icon > i-icon {
    margin-left: 2px;
}
.fix-button {
    position: absolute;
    bottom: 30px;
    right: 20px;
    width: 40px;
    height: 40px;
    border-radius: 50%;
    background-color: #fff;
}
