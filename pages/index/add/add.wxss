/* add.wxss */
Page {
    height: 100%;
    overflow: hidden;
    font-family: "Microsoft YaHei";
}
.search-box {
    width: 90%;
    height: 7%;
    margin: 6px auto 10px;
    background-color: rgba(224, 223, 223, 0.5);
    border-radius: 5px;
}
.i-float {
    float: left;
    margin-top: 5px;
    margin-left: 4px;
}
.search {
    float: left;
    width: 80%;
    height: 100%;
}
.equipment-box {
    width: 100%;
    height: 90%;
    border-top: 1px solid rgba(224, 223, 223, 0.5);
}
.bar-box {
    float: left;
    width: 27%;
    height: 100%;
    background-color: rgba(224, 223, 223, 0.5);
}
.active {
    background-color: #fff;
}
.eq-type {
    width: 100%;
    height: 30px;
    line-height: 30px;
    font-size: 14px;
    text-align: center;
    padding-top: 10px;
    padding-bottom: 10px;
}
.eq-box {
    float: left;
    margin-left: 5%;
    width: 63%;
    height: 100%;
}
.eq {
    float: left;
    width: 30%;
    height: 100px;
    margin-left: 3%;
    text-align: center;
    font-size: 12px;
    color: #555;
}
.eq > image {
    width: 100%;
    height: 60px;
}
