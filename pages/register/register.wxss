/* pages/register/register.wxss */
.wrap {
    height: 100%;
    width: 100%;
    text-align: center;
}
.title {
    display: block;
    font-weight: bold;
    font-size: 30px;
    font-family: "微软雅黑";
    padding: 80px 0;
    border: 1px solid #000000;
}
.bg {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    overflow: hidden;
}
.bg image {
    width: 100%;
    height: 100%;
}
.login {
    text-align: center;
    background-color: transparent;
    border: 1px #eee solid;
    color: #000;
    margin: 10px 15px;
    font-size: 14px;
    display: block;
    height: 45px;
    line-height: 45px;
}
.login:hover {
    border: 1px solid #5cadff;
}
.keepMeLoggedIn {
    float: none !important;
}
.code {
    margin: 0;
    height: 48px;
    line-height: 48px;
}

